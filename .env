# Environment Variables Example
# Copy this file to .env and update with your values

# Application Configuration
NODE_ENV=development
PORT=8080
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/rancher_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rancher_db
DATABASE_USER=user
DATABASE_PASSWORD=change-me-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rancher Configuration
RANCHER_URL=https://rancher.yourdomain.com
RANCHER_TOKEN=your-rancher-token-here
RANCHER_CLUSTER_ID=local

# Kubernetes Configuration
KUBECONFIG=/path/to/kubeconfig
KUBERNETES_NAMESPACE=default

# Security Configuration
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here
SESSION_SECRET=your-session-secret-here

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-s3-bucket

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_API_KEY=your-grafana-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
FROM_EMAIL=noreply@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#deployments

# SSL/TLS Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
VELERO_S3_BUCKET=your-backup-bucket

# Development Configuration
DEBUG=true
MOCK_EXTERNAL_SERVICES=false

# Feature Flags
ENABLE_MONITORING=true
ENABLE_BACKUP=true
ENABLE_SECURITY_SCAN=true
ENABLE_AUTO_SCALING=true

# Performance Configuration
MAX_MEMORY_USAGE=512m
MAX_CPU_USAGE=500m
WORKER_PROCESSES=2

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=100mb

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
